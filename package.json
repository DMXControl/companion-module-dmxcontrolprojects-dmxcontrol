{
	"name": "your-module-name",
	"version": "0.1.0",
	"main": "dist/main.js",
	"scripts": {
		"format": "prettier -w .",
		"lint": "eslint --ext .ts .",
		"generate:protocode": "grpc_tools_node_protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --js_out=import_style=commonjs,binary:./src/generated --grpc_out=grpc_js:./src/generated -I ./proto $(find ./proto -name '*.proto')",
		"generate:prototype": "protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --ts_out=generate_package_definition:./src/generated -I ./proto $(find ./proto -name '*.proto')",
		"generate:proto": "npm run generate:protocode && npm run generate:prototype",
		"build": "tsc",
		"package": "npm run build && yarn companion-module-build",
		"clean": "rm -rf dist && rm -rf src/generated && rm -rf pkg && rm pkg.tgz && mkdir src/generated"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-your-module-name.git"
	},
	"dependencies": {
		"@companion-module/base": "~1.5.1",
		"@grpc/grpc-js": "^1.9.8",
		"google-protobuf": "^3.21.2"
	},
	"devDependencies": {
		"@companion-module/tools": "^1.4.1",
		"@types/google-protobuf": "^3.15.9",
		"@typescript-eslint/eslint-plugin": "^6.9.0",
		"@typescript-eslint/parser": "^6.9.0",
		"eslint": "^8.52.0",
		"eslint-config-prettier": "^9.0.0",
		"grpc-tools": "^1.12.4",
		"grpc_tools_node_protoc_ts": "^5.3.3",
		"protoc": "^1.1.3",
		"typescript": "^5.2.2"
	},
	"packageManager": "yarn@4.0.1"
}
